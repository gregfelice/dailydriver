<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>io.github.gregfelice.DailyDriver</id>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-3.0-or-later</project_license>
  <name>Daily Driver</name>
  <summary>Visual keyboard configuration for GNOME</summary>
  <description>
    <p>
      Daily Driver provides a videogame-like options UI for keyboard configuration.
      Easily customize your keyboard shortcuts, create profiles, and configure
      Mac keyboards on Linux.
    </p>
    <p>Features:</p>
    <ul>
      <li>Visual keyboard display with shortcut overlay</li>
      <li>Profile system for saving and sharing configurations</li>
      <li>Built-in presets (Vanilla GNOME, Mac-like, Hyprland-style)</li>
      <li>Mac keyboard support (hid-apple configuration)</li>
      <li>Conflict detection and resolution</li>
      <li>Tiling Assistant integration</li>
    </ul>
  </description>

  <launchable type="desktop-id">io.github.gregfelice.DailyDriver.desktop</launchable>

